@model MvcConcepts.Models.TicketAssignViewModels
@{
    ViewBag.Title = "AssignTickets";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-8">
                        <section class="content">
                            @using (Html.BeginForm())
                            {
                                @Html.HiddenFor(p => p.Id)
                                @Html.ListBoxFor(p => p.SelectedUsers, Model.UserList)
                                <input type="submit" value="Submit!" />
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>